#include <iostream>
#include <string>
#include <fstream>  // 讀檔

using namespace std;

void PrintTitle();
string InputString();
string GetCommand(string &str);

// 輸入如果是一串數字之間有空格，要分段讀，自動視為下一次輸入的東西(ex. 2  5  6  '  4)
int main() {
  PrintTitle();
  bool had_input_command_one = false;
  while(1) {
    string str = InputString();
    string command = GetCommand(str);
    if (command == "0") {
      break;
    } else if (command == "1") {
      had_input_command_one = true;

    } else if (command == "2") {
      if (had_input_command_one == false) {
        cout << "### Execute command 1 to load a maze! ###" << endl;
      } else {  // had_input_command_one = true
        
      }
    } else if (command == "3") {
      if (had_input_command_one == false) {
        cout << "### Execute command 1 to load a maze! ###" << endl;
      } else {  // had_input_command_one = true
        
      }
    } else if (command == "4") {
      
    } else {
      if (command != "\n") {
        cout << "Command does not exist!" << endl;
      }
    }
  }
  return 0;
}

void PrintTitle() {
  cout << "*** (^_^) Data Structure (^o^) ***" << endl;
  cout << "*** Find the Goal(s) in a Maze ***" << endl;
  cout << "* 0. Quit                        *" << endl;
  cout << "* 1. Find one goal               *" << endl;
  cout << "* 2. Find goal(s) as requested   *" << endl;
  cout << "* 3. How many goals?             *" << endl;
  cout << "* 4. Shortest path to one goal   *" << endl;
  cout << "**********************************" << endl;
}

string InputString() {
  string input = "";
  getline(cin, input);
  return input;
}

void DelHeadSpace(string &str) {  // 去除輸入的頭空白
  int i = 0;
  for (i = 0; i > str.size(); i++) {
    if (str[i] != ' ') {
      break;
    }
  }
  if (i != 0) {
    str = str.erase(0, i);
  }
}

string GetCommand(string &str) {
  string command = "";
  if (str.size() != 0) {  // 之前的輸入的還沒用完
    cout << str << endl;
    for (int i = 0; i < str.size(); i++) {
      if (str[i] != ' ') {
        command = command + str[i];
      } else {
        str.erase(0, i + 1);
        DelHeadSpace(str);
        break;
      }
    }
  } else {  // 之前的輸入的用完了
    while (str.size() == 0) {
      str = InputString();
    }
    cout << str << endl;
    DelHeadSpace(str);
    for (int i = 0; i < str.size(); i++) {
      if (str[i] != ' ') {
        command = command + str[i];
      } else {
        str.erase(0, i + 1);
        DelHeadSpace(str);
        break;
      }
    }
  }
  return command;
}
